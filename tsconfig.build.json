{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts", "node_modules", "dist", "samples", "test"]
}
