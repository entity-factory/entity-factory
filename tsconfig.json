{
   "compilerOptions": {
      "lib": ["es5" ,"es6"],
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "moduleResolution": "node",
      "noLib": false,
      "baseUrl": "./",
      "outDir": "dist",
      "sourceRoot": "src",
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictPropertyInitialization": false
   },
   "exclude": [
      "node_modules",
      "test",
      "samples"
   ]
}