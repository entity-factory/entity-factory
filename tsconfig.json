{
   "compilerOptions": {
      "lib": ["es5" ,"es6"],
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "moduleResolution": "node",
      "noLib": false,
      "baseUrl": "./",
      "outDir": "dist",
      "sourceRoot": "src",
      "noImplicitAny": false,
      "strict": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictPropertyInitialization": false
   },
   "include": [
      "samples/**/*.ts",
      "src/**/*.ts",
      "test/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "dist"
   ]
}