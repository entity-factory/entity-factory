{
    "name": "entity-factory",
    "version": "0.1.1",
    "description": "Create entities on the fly for mocking and testing",
    "repository": {
        "type": "git \"packages/\"",
        "url": "https://github.com/entity-factory/entity-factory"
    },
    "scripts": {
        "test": "jest",
        "lint": "tslint -p \"tsconfig.json\" -c \"tslint.json\" -e \"**/node_modules/**\" \"packages/**/*.ts\"",
        "clean:packages": "rimraf \"packages/**/*.js\" && rimraf \"packages/**/*.js.map\" && rimraf \"packages/**/*.d.ts\" ",
        "doc:gen": "typedoc --options typedoc.json",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "author": "jcloutz",
    "license": "MIT",
    "dependencies": {
        "@entity-factory/core": "^0.1.2",
        "@entity-factory/typeorm": "^0.1.1"
    },
    "devDependencies": {
        "@types/faker": "^4.1.5",
        "@types/jest": "23.3.14",
        "@types/node": "11.13.14",
        "gulp": "4.0.2",
        "gulp-clean": "0.4.0",
        "gulp-typescript": "5.0.1",
        "husky": "1.3.1",
        "jest": "23.5.0",
        "lerna": "3.15.0",
        "lint-staged": "8.2.1",
        "prettier": "1.18.2",
        "reflect-metadata": "0.1.10",
        "rimraf": "2.6.3",
        "sqlite3": "4.0.9",
        "ts-jest": "23.10.5",
        "ts-node": "8.3.0",
        "tslint": "5.17.0",
        "tslint-config-prettier": "1.18.0",
        "typedoc": "0.14.2",
        "typedoc-plugin-external-module-name": "2.1.0",
        "typedoc-plugin-markdown": "2.0.5",
        "typeorm": "0.2.25",
        "typescript": "^3.3.3333"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "packages/**/*.ts": [
            "npm run lint",
            "prettier --write --print-width 120 --trailing-comma all --single-quote --parser typescript --arrow-parens always",
            "git add"
        ],
        "samples/**/*.ts": [
            "prettier --write --print-width 120 --trailing-comma all --single-quote --parser typescript --arrow-parens always",
            "git add"
        ],
        "*.{js,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "roots": [
            "packages/"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "./samples/"
        ],
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "coverage",
        "testEnvironment": "node"
    }
}
